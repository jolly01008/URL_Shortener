{{#if Url}}
  <div class="container">
    <div class="text-center mt-5">
      <h3>Success! Please use this link :</h3>
    </div>
  </div>

{{else}}
  <div class="container">
    <form action="/" method="POST">
      <div class="mt-5 col-6 mx-auto">
        <input name="shortURL" type="text" class="form-control" placeholder="Input URL here">
      </div>

      <div class="d-grid col-2 mx-auto mt-4">
        <button class="btn btn-primary" type="submit">Shorten</button>
      </div>
    </form>
  </div>
{{/if}}